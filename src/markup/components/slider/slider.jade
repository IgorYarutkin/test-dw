mixin slider(data)
    +b.slider()&attributes(attributes)
        +e.icon-arrow-left
        +e.icon-arrow-right
        each item in slider.list
            +e.item(style="background-image:url('#{item.src}')")
                +e.P.description
                    +e.SPAN.text #{item.text}
                    +e.SPAN.title #{item.title}
                    +e.SPAN.note #{item.note}
                    +e.icon-plane
